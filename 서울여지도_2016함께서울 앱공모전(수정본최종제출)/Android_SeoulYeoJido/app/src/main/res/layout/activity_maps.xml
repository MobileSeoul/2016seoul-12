<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rhxorhkd.android_seoulyeojido.MapsActivity" />


    <ImageView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/map_back"
        android:id="@+id/map_back"
        android:layout_width="48dp"
        android:layout_height="56dp" />

    <RelativeLayout
        android:id="@+id/location_detail"
        android:background="@drawable/map_border"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView

            android:layout_marginBottom="14dp"
            android:id="@+id/location_name"
            android:textColor="#000000"
            android:text="장소이름"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/map_bottom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="9dp"
            android:id="@+id/checkin_text"
            android:layout_below="@id/location_name"
            android:text="체크인"
            android:textColor="#9e9e9e"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/map_bottom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="17dp"
            android:textSize="13sp"
            android:textColor="#000000"
            android:text=""
            android:id="@+id/checkin_cnt"
            android:layout_below="@id/location_name"
            android:layout_toRightOf="@+id/checkin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:textColor="#9e9e9e"-->
            <!--android:layout_marginRight="9dp"-->
            <!--android:layout_toRightOf="@+id/checkin_cnt"-->
            <!--android:layout_below="@id/location_name"-->
            <!--android:textSize="13sp"-->
            <!--android:text="댓글"-->
            <!--android:id="@+id/location_reply"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <!--<TextView-->
            <!--android:layout_toRightOf="@+id/location_reply"-->
            <!--android:layout_below="@id/location_name"-->
            <!--android:textColor="#000000"-->
            <!--android:textSize="13sp"-->
            <!--android:text="163"-->
            <!--android:id="@+id/reply_cnt"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/marker_cate_gu"
            android:textColor="#9e9e9e"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/map_bottom_img"
            android:layout_below="@+id/checkin_text"
            android:text="랜드마크 · 중구"
            android:textSize="13sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="21dp"
            android:scaleType="fitXY"
            android:id="@+id/map_bottom_img"
            android:src="@drawable/irene2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_marginTop="6dp"
            android:src="@drawable/after_check_in_flag"
            android:id="@+id/flag"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"

             />

    </RelativeLayout>

</RelativeLayout>


