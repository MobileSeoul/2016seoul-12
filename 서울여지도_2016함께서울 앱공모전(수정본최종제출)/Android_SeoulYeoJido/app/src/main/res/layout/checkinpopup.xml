<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dip"
    android:layout_height="270dip"
    android:background="@drawable/shape">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="264dip"
            android:layout_height="256dip"
            android:layout_centerHorizontal="true"
            android:background="#ffffff">

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:id="@+id/check_in_large"
                    android:src="@drawable/check_in_large"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="66dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:text="체크인 하시겠습니까?"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="24dip"
                    android:paddingTop="10dip"
                    android:layout_below="@+id/check_in_large" />


                <ImageView
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:id="@+id/btn_checkin"
                    android:src="@drawable/check_in"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="8dip"
                    android:layout_marginBottom="8dip"/>

                <ImageView
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:id="@+id/btn_checkincancel"
                    android:src="@drawable/cancel"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="8dip"
                    android:layout_marginBottom="8dip"/>

        </RelativeLayout>
</RelativeLayout>