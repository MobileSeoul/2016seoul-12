<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rhxorhkd.android_seoulyeojido.rank">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:text="랭킹"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/find_myRank"
            android:clickable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/my_rank"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_alignBottom="@+id/rl"
        android:background="#d7d7d7"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <RelativeLayout
        android:background="#f6f6f6"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        
        <TextView
            android:id="@+id/rank_text"
            android:text="이번주 서울러들의 랭크입니다."
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textColor="#9e9e9e"
            android:textSize="10sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="8dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="체크인 수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/rank_rc"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
